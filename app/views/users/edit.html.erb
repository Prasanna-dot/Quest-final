            <%end%>
          </div>
           <div class="table_detial">
            <%if current_user%>
            <p><%=current_user.email%></p>
            <%end%>
            
   <%if @usercontact.present? %>
            <%if @usermobile.present? %>
            <p><%=@usermobile%></p>
            <%end%>
            
            <%if @userwebsite.present? %>
            <p><a href="<%=@userwebsite%>" target="_blank" style="text-decoration: none"
