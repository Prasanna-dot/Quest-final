      <%if @user.profile_pic.attached?%>
      <%= image_tag(@user.profile_pic) %>
      <%else%>
      <em class="fa-solid fa-user"></em>
      <%end%>
      <%end%>
      </div>
    </div>
    <div class="profile_detial">
